<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
		
<mapper namespace="search">

	<select id="searchAll" resultType="store.fnfm.vo.ProductVO">
		SELECT pname, filename, price,
		FROM product
		<include refid="search"></include>
		ORDER BY idx DESC
	</select>
	
	<select id="searchAllCount" resultType="store.fnfm.vo.ProductVO">
		SELECT COUNT(*)
		FROM product
		<include refid="search"></include>
	</select>
	
	<sql id="search">
		WHERE sellerid like '%'||#{keyword}||'%'
		OR pname like '%'||#{keyword}||'%'
	</sql>
	
</mapper>